<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="40dp" >

    <TextView
        android:id="@+id/textFile"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="00000000"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/textXXX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textFile"
        android:layout_marginLeft="5dp"
        android:text=" "/>

    <TextView
        android:id="@+id/textVir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textXXX"
        android:layout_toRightOf="@+id/textFile"
        android:layout_marginLeft="5dp"
        android:text="Vir 320x16"
        android:textColor="#040404"
        android:textSize="10dip"
        android:textStyle="bold" />    
    
    <TextView
        android:id="@+id/textBPP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textFile"
        android:layout_toRightOf="@+id/textFile"
        android:layout_marginLeft="5dp"
        android:text="BPP 2"
        android:textColor="#343434"
        android:textSize="10dip" />
    
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignBottom="@+id/textFile"
        android:layout_alignTop="@+id/textFile"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textVir"
        android:baselineAlignBottom="true"
        android:gravity="left"
        android:scaleType="fitXY"
        android:src="@drawable/search" />



</RelativeLayout>